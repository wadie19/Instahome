{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}
{% block stylesheets %}
	
{% endblock %}
{% block body %}

<div class="container" style="margin-top:10px">
    <div class="row">
        <div class="col-6" id='left'>
            <h2>Détail de {{article.titre}}</h2>
 

        <ul class="list-group"> 
            <li class="list-group-item">
            <img class="justify-content-center col-11 img-fluid rounded" style="filter: drop-shadow(0 0 0.75rem #F5F5DC);" src="{{asset('/uploads/images/articles/' ~ article.image )}}" alt="image"></li>
            <li class="list-group-item">Status: {{article.categorie}}</li>
            <li class="list-group-item">Description: {{article.description}}</li>
            <li class="list-group-item">Prix: {{article.prix}} DT</li>  
            <li class="list-group-item">Lieu: {{article.city}}</li>
            <li class="list-group-item">adresse: {{article.adresse}}</li>
        <li class="list-group-item">

        <p>
        <a href="{{ path('articles_index') }}" class="btn btn-secondary">
        <i class="glyphicon glyphicon-chevron-left"></i>
            Retour
        </a>
         {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('articles_edit', {'id': article.id}) }}" class="btn btn-warning">
        <i class="glyphicon glyphicon-chevron-left"></i>
            Modifier
        </a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('articles_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Supprimer
        </a>
        {% endif %}
        </p> 
        </li>
        </ul>
        </div>   
    <div class="col-6" id='right' style='margin-top:40px'>
            <h1 style="color: red;">Contacter le propriétaire</h1>
            <br>
            <hr>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
            <p>Numéro de téléphone : {{article.getUserId()}}</p>
            </svg>
             <br>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
            </svg>
            <p>instahome-tn@outlook.com</p>      
        </div>
    </div>
</div> 
{% endblock %}
{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.1.1.min.js">
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js">
